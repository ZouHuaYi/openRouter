{
  "name": "openrouter-gateway",
  "version": "2.0.2",
  "description": "OpenAI-compatible aggregation gateway for multiple LLM providers",
  "main": "electron/main.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "ui": "npm run build:ui && electron .",
    "build:ui": "vite build -c electron/ui-src/vite.config.mjs",
    "electron": "electron .",
    "dist": "npm run build:ui && electron-builder"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "dotenv": "^17.2.4",
    "fastify": "^4.28.1",
    "undici": "^6.2.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^33.0.0",
    "element-plus": "^2.13.2",
    "unocss": "^0.62.0",
    "vite": "^5.4.0",
    "vue": "^3.5.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.openrouter.gateway",
    "productName": "OpenRouter Gateway",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "config/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "config",
        "to": "config",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": true,
    "asarUnpack": [
      "src/**",
      "node_modules/**"
    ]
  }
}